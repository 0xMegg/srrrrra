generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Consultation {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  date      DateTime
  category  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatConsultation {
  id        Int      @id @default(autoincrement())
  phone     String
  content   String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EvaluationRequest {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  scale       String
  budget      Int
  deadline    DateTime
  attachments String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
